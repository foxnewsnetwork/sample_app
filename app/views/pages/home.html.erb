<% if signed_in? %>
  <table class="front" summary="for logged in user">
    <tr>
      <td class="main">
        <h1 class="macropost">Tabs should go here once implemented</h1>
        <%= render 'shared/macropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
      </td>
    </tr>
  </table>
<% else %>
  <h1><%= link_to "Welcome to CoTABit", home_path %></h1>

  <p>
    This is the home page for this site.
  </p>

  <%= link_to "Sign up now!" , signup_path , :class => "signup_button round" , :title => "Signup" %>
<% end %>
